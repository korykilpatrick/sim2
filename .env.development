# Environment Configuration
# Development environment settings

# API Configuration
VITE_API_URL=http://localhost:3001/api/v1
VITE_WEBSOCKET_URL=ws://localhost:3001

# Authentication
VITE_AUTH_TOKEN_KEY=sim_auth_token
VITE_REFRESH_TOKEN_KEY=sim_refresh_token

# Error Tracking (Sentry)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# Analytics
VITE_ANALYTICS_ID=
VITE_ANALYTICS_ENABLED=false

# Feature Flags
VITE_ENABLE_MOCK_API=true
VITE_ENABLE_DEBUG_MODE=true
# WebSocket Configuration
# Set to true when running the full stack (npm run dev) for real-time features
# Set to false when running client-only (npm run dev:client) to avoid connection errors
VITE_ENABLE_WEBSOCKET=false

# Map Configuration
VITE_MAPBOX_ACCESS_TOKEN=
VITE_DEFAULT_MAP_CENTER_LAT=0
VITE_DEFAULT_MAP_CENTER_LNG=0
VITE_DEFAULT_MAP_ZOOM=2

# External Services
VITE_STRIPE_PUBLIC_KEY=
VITE_INTERCOM_APP_ID=

# Application Settings
VITE_APP_NAME="SIM - Synmax Intelligence for Maritime"
VITE_APP_VERSION=$npm_package_version
VITE_SESSION_TIMEOUT_MINUTES=30
VITE_API_TIMEOUT_MS=30000

# Development Settings
VITE_DEV_SHOW_REDUX_DEVTOOLS=true
VITE_DEV_SHOW_QUERY_DEVTOOLS=true